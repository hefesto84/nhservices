<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SqlMapHotel">
    
    <resultMap id="Hotel" type="es.ubiqua.nhservices.model.Hotel">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>
    
    <select id="list" resultMap="SqlMapHotel.Hotel">
        SELECT * FROM hotel;
    </select>
    
    <select id="get" parameterType="es.ubiqua.nhservices.model.Hotel" resultMap="SqlMapHotel.Hotel">
        SELECT * FROM hotel WHERE name = #{name};
    </select>
    
    <insert id="add" parameterType="es.ubiqua.nhservices.model.Hotel" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO hotel_canales (id_hotel,name) 
        	VALUES (
        		#{id_hotel},
        		#{name}
        	)
        	
        <selectKey keyProperty="id" resultType="int" order="AFTER">
			SELECT LAST_INSERT_ID();
	  	</selectKey>
	  	
    </insert>
    
    <update id="update" parameterType="es.ubiqua.nhservices.model.Hotel">
    	UPDATE hotel SET 
    		name = #{name},
    	WHERE id = #{id}
    </update>
    
    <delete id="del" parameterType="es.ubiqua.nhservices.model.Hotel">
	  	delete from hotel where id = #{id}
	</delete>
    
</mapper>
