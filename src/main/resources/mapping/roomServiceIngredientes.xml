    <select id="list" resultMap="RoomServiceIngredientes" parameterType="java.util.Map">
    	SELECT rsi.*, rsc.categoria as categoria_name, rsis.subcategoria as subcategoria_name FROM room_service_ingredientes rsi, hotel_room_service_ingredientes hrsi, room_service_categoria rsc, room_service_ingredientes_subcategoria rsis WHERE hrsi.id_hotel = #{hotel.id} AND rsi.id = hrsi.id_room_service_ingredientes AND rsi.categoria = rsc.id AND rsi.subcategoria = rsis.id AND rsi.lang = #{lang};
    </select>
    
