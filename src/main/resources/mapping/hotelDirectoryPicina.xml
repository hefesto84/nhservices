<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SqlMapHotelDirectoryPicina">
    
    <resultMap id="HotelDirectoryPicina" type="es.ubiqua.nhservices.model.HotelDirectoryPicina">
        <result property="id" column="id"/>
        <result property="lang" column="lang"/>
        <result property="localization" column="localization"/>
        <result property="timetable" column="timetable"/>
    </resultMap>
    
    <select id="list" resultMap="SqlMapHotelDirectoryPicina.HotelDirectoryPicina">
        SELECT * FROM hotel_directory_picina;
    </select>
    
    <select id="get" parameterType="es.ubiqua.nhservices.model.HotelDirectoryPicina" resultMap="SqlMapHotelDirectoryPicina.HotelDirectoryPicina">
        SELECT * FROM hotel_directory_picina WHERE id = #{id};
    </select>
    
    <insert id="add" parameterType="es.ubiqua.nhservices.model.HotelDirectoryPicina" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO hotel_directory_picina (lang,localization,timetable) 
        	VALUES (
        		#{lang},
        		#{localization},
        		#{timetable}
        	)
        	
        <selectKey keyProperty="id" resultType="int" order="AFTER">
			SELECT LAST_INSERT_ID();
	  	</selectKey>
	  	
    </insert>
    
    <update id="update" parameterType="es.ubiqua.nhservices.model.HotelDirectoryPicina">
    	UPDATE hotel_directory_picina SET 
    		lang = #{lang},
    		localization = #{localization},
    		timetable = #{timetable},
    	WHERE id = #{id}
    </update>
    
    <delete id="del" parameterType="es.ubiqua.nhservices.model.HotelDirectoryPicina">
	  	delete from hotel_directory_picina where id = #{id}
	</delete>
    
</mapper>
